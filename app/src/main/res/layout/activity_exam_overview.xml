<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/relativeLayout8"
        android:layout_weight="0.3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_box_unlimited_testing"
                android:id="@+id/textView4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView4"
                android:layout_toStartOf="@+id/textView4"
                android:src="@drawable/ic_info"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/img_desc_info_block"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:minWidth="500dp"
        android:layout_weight="1.7"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kim_floating_box_btn"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/bButton"
            android:paddingTop="13dp"
            android:paddingBottom="13dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_vca_b"
                android:id="@+id/bLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/main_menu_buy_description_exam"
                android:id="@+id/bDescriptionLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_normal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kim_floating_box_btn"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/volButton"
            android:paddingTop="13dp"
            android:paddingBottom="13dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_vca_vol"
                android:id="@+id/volLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/main_menu_buy_description_exam"
                android:id="@+id/volDescriptionLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_normal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kim_floating_box_btn"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/vilButton"
            android:paddingTop="13dp"
            android:paddingBottom="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_vcu_vil"
                android:id="@+id/vilLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/main_menu_buy_description_exam"
                android:id="@+id/vilDescriptionLabel"
                android:textColor="@color/text_white"
                android:gravity="center_horizontal"
                android:textSize="@dimen/font_size_normal"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/imageView4"
        android:src="@drawable/kim_plus_delta_logo"
        android:scaleType="fitEnd"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/desc_kim_logo"
        android:layout_margin="16dp" />

</LinearLayout>
